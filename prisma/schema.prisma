generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id           Int      @id @default(autoincrement())
  requestedBy  String
  resource     String
  startTime    DateTime
  endTime      DateTime
  createdAt    DateTime @default(now())
  status       String   @default("Upcoming")
  bufferBefore Int      @default(10)
  bufferAfter  Int      @default(10)

  @@index([resource, startTime, endTime])
}
